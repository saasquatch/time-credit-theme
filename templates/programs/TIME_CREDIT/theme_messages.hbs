<script>
  window.squatch = window.squatch || {};

  window.squatch.user = {
    code     : '{{user.referralCode}}',
    sharelink: '{{shareLinks.shareLink}}',
    email: {
      share : {
        subject: '{{urlencode (i18n "emailShareSubject" programDetails.referredRewardDetails.credit companyName bundle="i18n/messages") space="%20"}}',
        body: '{{urlencode (i18n "emailShareBody" companyName programDetails.referredRewardDetails.credit user.referralCode bundle="i18n/messages") space="%20"}}',
        mailToLink: 'mailto:?subject={{urlencode (i18n "emailShareSubject" programDetails.referredRewardDetails.credit companyName bundle="i18n/messages") space="%20"}}&body={{urlencode (i18n "emailShareBody" companyName programDetails.referredRewardDetails.credit user.referralCode bundle="i18n/messages") space="%20"}}',
      },
      reminder : {
        subject: '',
        body: '',
        mailToLink: '',
      },
      type: 'UNKNOWN'
    },
    facebook: {
      title: '{{urlencode (i18n "fbTitle" programDetails.referredRewardDetails.credit companyName bundle="i18n/messages") }}',
      summary: '{{urlencode (i18n "fbSummary" companyName programDetails.referredRewardDetails.credit shareLinks.facebookShareLink bundle="i18n/messages") }}',
      link: '{{shareLinks.facebookShareLink}}',
      shareImage: '{{assets "images/log-me-in.jpg"}}',
      appId: '157382547792399',
      redirectUrl: 'http://app.referralsaasquatch.com/widget/close'
    },
    twitter: {
      message: '{{urlencode (i18n "twitterMsg" companyName programDetails.referredRewardDetails.credit shareLinks.twitterShareLink bundle="i18n/messages") }}'
    },
    mobile: {
      sharelink : '{{shareLinks.shareLink}}',
      emailBody: '{{urlencode (i18n "emailShareBody" shareLinks.emailShareLink bundle="i18n/messages") space="%20"}}',
      facebookBody: '{{urlencode (i18n "fbSummary" shareLinks.facebookShareLink bundle="i18n/messages") }}',
      twitterBody: '{{urlencode (i18n "twitterMsg" companyName (math programDetails.referredRewardDetails.credit ' / 100') user.referralCode bundle="i18n/messages") }}',
      twitterShareLink : '{{shareLinks.mobileTwitterShareLink}}',
      facebookShareLink : '{{shareLinks.mobileFacebookShareLink}}',
      emailShareLink: '{{shareLinks.mobileEmailShareLink}}'
    },
    fallbackImg: 'https://www.gravatar.com/avatar/0?d=blank'
  };

  window.squatch.analytics = {
    apikey    : '{{segmentApiKey}}',
    attributes: {
      tenant   : '{{tenantAlias}}',
      userId   : '{{user.id}}',
      accountId: '{{user.accountId}}'
    },
    user: {
      ident : '{{user.id}}',
      traits: {
        tenant   : '{{tenantAlias}}',
        accountId: '{{user.accountId}}'
      }
    },
    events: {
      OPENED_WIDGET : 'Opened Widget',
      OPENED_POPUP  : 'Opened Popup',
      CLOSED_POPUP  : 'Closed Popup',
      FACEBOOK_SHARE: 'Clicked Facebook Share',
      TWITTER_SHARE : 'Clicked Twitter Share',
      EMAIL_SHARE   : 'Clicked Email Share',
      LEARN_MORE    : 'Clicked Learn More',
      FAQ_BACK      : 'Clicked FAQ Back',
      COPY_LINK     : 'Clicked Copy Link',
      REMIND_FRIEND : 'Clicked Remind Friend'
    }
  };

  window.squatch.mode = {
    widgetMode     : '{{mode}}',
    POPUP_MODE     : 'POPUP',
    EMBED_MODE     : 'EMBED',
    DEMO_MODE      : 'DEMO',
    DEMO_EMBED_MODE: 'DEMO_EMBED',
    NOCONTENT_MODE : 'NOCONTENT'
  };

  window.squatch.asset = {
    zeroclipboard: '{{assets "javascripts/ZeroClipboard.swf"}}'
  }
</script>
