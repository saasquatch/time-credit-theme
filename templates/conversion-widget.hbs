  <head>
    <base target="_self">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Referral SaaSquatch Percent Discount Theme</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700">
    <link rel="stylesheet" href="{{assets 'css/conversion-widget.css'}}">

    {{> programs/TIME_CREDIT/theme_messages}}
    {{squatchHead}}
    <script src="{{assets 'javascript/base.js'}}"></script>
    <script src="{{assets 'javascript/events.js'}}"></script>


    <!--[if lt IE 9]>
      <script src="{{assets 'libs/bind-polyfill.js'}}"></script>
      <script src="{{assets 'libs/html5shiv-printshiv.min.js'}}"></script>
    <![endif]-->

    <!--[if lte IE 9]>
      <script src="{{assets 'libs/matchMedia.js'}}"></script>
      <script src="{{assets 'libs/matchMedia.addListener.js'}}"></script>
    <![endif]-->

   <style>
      .squatch-container .squatch-title {
        color: {{variables 'widget.CONVERSION_WIDGET.content.widgetCustomization.headerColor'}};
      }
      body .squatch-container {
        font-family: {{variables 'widget.CONVERSION_WIDGET.content.widgetCustomization.widgetFont'}};
      }
    </style>
  </head>

  <body>
    <main class="squatch-container squatch-container-{{lower mode}}">
      <div class="squatch-body">

        <div class="friend-face">
          <img src={{variables 'widget.CONVERSION_WIDGET.content.widgetCustomization.widgetHeaderImage'}}>
        </div>

        {{> programs/TIME_CREDIT/conversion-title}}

        <button class="close squatch-header-close" data-close-panel="#squatch-panel">Close</button>

        {{#if referredBy}}
          {{> programs/TIME_CREDIT/conversion-lead}}
          {{> conversion-share}}
        {{/if}}
      </div>

    </main>

    <div id="cta">
      {{>cta-widget widget.CONVERSION_WIDGET.cta}}
    </div>

    <script src="{{assets 'libs/ready.min.js'}}"></script>
    <script src="{{assets 'libs/clipboard.min.js'}}"></script>
    <script src="{{assets 'libs/moment.min.js'}}"></script>
    <script src="{{assets 'javascript/widget.js'}}"></script>
  </body>
</html>
