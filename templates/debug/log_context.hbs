<script type="text/javascript">
   (function(){
       {{#if debug-context}}
          var plaintext = "{{debug-context}}";
       {{else}}
          var plaintext = "{{this}}";
       {{/if}}
       try{
           var pre = document.createElement("pre");
           pre.innerHTML = plaintext;
           var context = JSON.parse(pre.innerText);
           console.log("Current context {{debug-details}}", context);
       }catch(e){
           console.log("Current context (non-obj) {{debug-details}}", plaintext);
       }
   })();
</script>