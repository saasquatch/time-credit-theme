<script type="text/javascript">
   (function(){
       {{#if context}}
          var plaintext = "{{context}}";
       {{else}}
          var plaintext = "{{this}}";
       {{/if}}
       try{
           var pre = document.createElement("pre");
           pre.innerHTML = plaintext;
           var context = JSON.parse(pre.innerText);
           console.log("Current context", context);
       }catch(e){
           console.log("Current context (non-obj)", plaintext);
       }
   })();
</script>