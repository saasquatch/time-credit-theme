<!doctype html>
<!--[if lt IE 9]><html class="lt-ie9 ie no-flash"><![endif]-->
<!--[if IE 9]><html class="ie no-flash"><![endif]-->
<!--[if gt IE 9]><!--><html class="no-flash" lang="en"><!--<![endif]-->
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Referral SaaSquatch Time Credit Theme</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700">
    <link rel="stylesheet" href="{{assets 'css/widget.css'}}">

    {{> jsHead}}
    {{squatchHead}}

    <!--[if lt IE 9]>
      <script src="/assets/libs/html5shiv-printshiv.min.js"></script>
    <![endif]-->

    <script>
      // Detect if client supports flash and if so remove the `no-flash` class from the html element
      (function() {
        var hasFlash = false;
        try {
          var fo = new ActiveXObject('ShockwaveFlash.ShockwaveFlash');
          if (fo) {
            hasFlash = true;
          }
        } catch (e) {
          if (navigator.mimeTypes
                && navigator.mimeTypes['application/x-shockwave-flash'] != undefined
                && navigator.mimeTypes['application/x-shockwave-flash'].enabledPlugin) {
            hasFlash = true;
          }
        }

        if (hasFlash) {
          html = document.getElementsByTagName('html')[0];
          html.className = html.className.replace('no-flash', '');
        }
      })()
    </script>
  </head>
  <body>

    <main class="squatch-container squatch-container-{{lower mode}}">
      <div class="squatch-body">
        <h1 class="squatch-title">
          Give
          {{programDetails.referredRewardDetails.credit}}
          Month<span class="hidden-{{math programDetails.referredRewardDetails.credit '== 1'}}">s</span>

          and Get
          {{programDetails.referredRewardDetails.credit}}
          Month<span class="hidden-{{math programDetails.referredRewardDetails.credit '== 1'}}">s</span>!
        </h1>

        <button class="close squatch-header-close" data-close-panel="#squatch-stats-panel">Close</button>

        <p class="squatch-lead">
          Give a friend

          <span class="hidden-{{math programDetails.referredRewardDetails.credit '> 1'}}">a</span>
          <span class="hidden-{{math programDetails.referredRewardDetails.credit '== 1'}}">{{programDetails.referredRewardDetails.credit}}</span>

          free

          month<span class="hidden-{{math programDetails.referredRewardDetails.credit '== 1'}}">s</span>
          of {{companyName}} and receive
          <span class="hidden-{{math programDetails.referredRewardDetails.credit '> 1'}}">a</span>
          <span class="hidden-{{math programDetails.referredRewardDetails.credit '== 1'}}">{{programDetails.referredRewardDetails.credit}}</span>

          free

          month<span class="hidden-{{math programDetails.referredRewardDetails.credit '== 1'}}">s</span>

          of {{companyName}} credit when they pay their first bill.
        </p>

        <p class="squatch-cta">
          Share the link below or use code <b>{{user.referralCode}}</b>
        </p>

        <div class="squatch-share">
          <div class="form-group">
            <div class="input-group">
              <input class="form-control" id="squatch-share-link" value="{{shareLinks.shareLink}}" readonly="readonly">

              <span class="label label-default fade" id="squatch-share-notification">Copied!</span>

              <span class="input-group-btn">
                <button class="btn btn-primary icon-btn" data-clipboard-target="squatch-share-link" data-clipboard-notification="#squatch-share-notification"><i class="icon icon-link"></i> Copy</button>
              </span>
            </div>
          </div>

          <div class="row">
            <div class="col-xs-4">
              <a class="btn btn-email btn-block icon-btn emailShare"><i class="icon icon-mail"></i> Email</a>
            </div>
            <div class="col-xs-4">
              <a class="btn btn-facebook btn-block icon-btn fbShare"><i class="icon icon-facebook"></i> Share</a>
            </div>
            <div class="col-xs-4">
              <a class="btn btn-twitter btn-block icon-btn twShare"><i class="icon icon-twitter"></i> Tweet</a>
            </div>
          </div>
        </div>
      </div>

      <div class="squatch-stats" id="squatch-stats-panel">
        <div class="squatch-stats-body">
          <h2 class="squatch-stats-title">
            Referral Stats
          </h2>

          <div class="row squatch-rewards">
            <div class="col-xs-4 text-center">
              <div class="squatch-rewards-total-credit">
                {{#if rewardBalances.[0].totalRedeemedCredit}}
                  {{rewardBalances.[0].totalRedeemedCredit}}
                {{else}}
                  0
                {{/if}}
              </div>
              <span class="squatch-rewards-description">
                Free
                Month{{#if rewardBalances.[0].totalRedeemedCredit}}<span class="hidden-{{math rewardBalances.[0].totalRedeemedCredit '== 1'}}">s</span>{{else}}s{{/if}}
                Used
              </span>
            </div>

            <div class="col-xs-4 text-center">
              <div class="squatch-rewards-credit-available">
                {{#if rewardBalances.[0].count}}
                  {{rewardBalances.[0].count}}
                {{else}}
                  0
                {{/if}}
              </div>

              <span class="squatch-rewards-description">
                Free
                Month{{#if rewardBalances.[0].totalRedeemedCredit}}<span class="hidden-{{math rewardBalances.[0].count '== 1'}}">s</span>{{else}}s{{/if}}
                Active
              </span>
            </div>

            <div class="col-xs-4 text-center">
              <div class="squatch-rewards-referred">{{referralsLength}}</div>
              <span class="squatch-rewards-description">Friends Referred</span>
            </div>
          </div>

          <div class="squatch-referrals-container" id="squatch-referrals-scroll" data-scroll-offset="0" data-scroll-limit="{{#if referredBy.dateReferred}}{{math referralsLength '+ 1'}}{{else}}{{math referralsLength}}{{/if}}">
            <table class="squatch-referrals">
              {{#if referredBy.referredByUser}}
                <tr id="0">
                  {{> referral {referral: referredBy.referredByUser, description: "Referring User", heading: "Referred You", paid: 1, dateReferred: referredBy.dateReferred}}}
                </tr>
              {{/if}}

              {{#each referrals}}
                <tr id="{{#if ../referredBy.dateReferred}}{{math @index '+ 1'}}{{else}}{{math @index}}{{/if}}">
                  {{> referral
                    referral=referredUser
                    programDetails=../programDetails}}
                </tr>
              {{/each}}
            </table>
          </div>

          <div class="squatch-stats-body-actions">
            <button class="btn btn-default disabled" data-scroll-element="#squatch-referrals-scroll" data-scroll-increment="-3">Previous</button>

            <button class="btn btn-default" data-close-panel="#squatch-stats-panel" data-scroll-reset="#squatch-referrals-scroll">Hide Details</button>

            <button class="btn btn-default disabled" data-scroll-element="#squatch-referrals-scroll" data-scroll-increment="3">View More</button>
          </div>

          <div class="squatch-attribution text-center">
            Powered By Referral Saasquatch
          </div>
        </div>
      </div>

      <div class="squatch-actions">
        <button data-open-panel="#squatch-stats-panel" class="btn btn-default
          {{#unless referrals}}
            {{#unless referredBy.dateReferred}}
              disabled
            {{/unless}}
          {{/unless}}
        ">
          {{#if referrals}}
            Show Details
          {{else}}
            {{#if referredBy.dateReferred}}
              Show Details
            {{else}}
              No Referrals Yet...
            {{/if}}
          {{/if}}
        </button>
        <div class="squatch-attribution">
          Powered By Referral Saasquatch
        </div>
      </div>
    </main>

    <!--[if lt IE 9]><script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script><![endif]-->
