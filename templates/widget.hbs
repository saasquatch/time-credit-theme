<!doctype html>
<!--[if lt IE 9]><html class="lt-ie9 ie"><![endif]-->
<!--[if IE 9]><html class="ie"><![endif]-->
<!--[if gt IE 9]><html lang="en"><![endif]-->
  <head>
    <base target="_self">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Referral SaaSquatch Time Credit Theme</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato:300,400,700">
    <link rel="stylesheet" href="{{assets 'css/widget.css'}}">

    {{!-- TODO: Switch the second line below out with the line directly below when we've updated to Handlebars.java 2.2.0 --}}
    {{!-- {{> (stringFormat 'programs/%s/theme_messages' programDetails.referredRewardDetails.rewardType) }} --}}
    {{> programs/TIME_CREDIT/theme_messages}}
    {{squatchHead}}
    <script src="{{assets 'javascript/base.js'}}"></script>
    <script src="{{assets 'javascript/events.js'}}"></script>

    <!--[if lt IE 9]>
      <script src="{{assets 'libs/bind-polyfill.js'}}"></script>
      <script src="{{assets 'libs/html5shiv-printshiv.min.js'}}"></script>
    <![endif]-->

    <!--[if lte IE 9]>
      <script src="{{assets 'libs/matchMedia.js'}}"></script>
      <script src="{{assets 'libs/matchMedia.addListener.js'}}"></script>
    <![endif]-->

   <style>
      .squatch-container .squatch-title {
        color: {{variables 'widget.REFERRER_WIDGET.content.widgetCustomization.headerColor'}};
      }
      body .squatch-container {
        font-family: {{variables 'widget.REFERRER_WIDGET.content.widgetCustomization.widgetFont'}};
      }
    </style>
  </head>

  <body>
    <main class="squatch-container squatch-container-{{lower mode}}">
      <div class="squatch-body">
        {{!-- TODO: Switch the second line below out with the line directly below when we've updated to Handlebars.java 2.2.0 --}}
        {{!-- {{> (stringFormat 'programs/%s/title' programDetails.referredRewardDetails.rewardType) }} --}}
        {{> programs/TIME_CREDIT/title}}

        <button class="close squatch-header-close" data-close-panel="#squatch-panel">Close</button>

        {{!-- TODO: Switch the second line below out with the line directly below when we've updated to Handlebars.java 2.2.0 --}}
        {{!-- {{> (stringFormat 'programs/%s/lead' programDetails.referredRewardDetails.rewardType) }} --}}
        {{> programs/TIME_CREDIT/lead}}
        {{> cta}}
        {{> share}}
      </div>

      {{#if user.email}}
        <div id="squatch-panel">
          {{!-- TODO: Switch the second line below out with the line directly below when we've updated to Handlebars.java 2.2.0 --}}
          {{!-- {{> (stringFormat 'programs/%s/panel_summary' programDetails.referredRewardDetails.rewardType) }} --}}
          {{> programs/TIME_CREDIT/panel_summary}}
          {{> referrals}}
          {{> attribution}}
        </div>

        {{> actions}}
      {{else}}
        {{> form}}
      {{/if}}
    </main>

    <div id="cta">
       {{>cta-widget cta=(variables-object widget.REFERRER_WIDGET.cta)}}
    </div>

    <script src="{{assets 'libs/ready.min.js'}}"></script>
    <script src="{{assets 'libs/clipboard.min.js'}}"></script>
    <script src="{{assets 'libs/moment.min.js'}}"></script>
    <script src="{{assets 'javascript/widget.js'}}"></script>
  </body>
</html>
